
<view class="body">
    <view class="help_content">
        <text>帮助内容: </text>
        <textarea placeholder="请输入帮助信息, 例如: 代快递、代购商品、寄存物品等等" cols="30" rows="10" value="{{ helpContent }}" bindinput="getHelpContent"></textarea>
    </view>
    <view class="item">
        <text>服务地点: </text>
        <input type="text" placeholder="如西8 121" value="{{ gameName }}" bindinput="getGameName" />
    </view>
    <view class="item">
        <text>金额: </text>
        <input type="text" placeholder="输入金额" value="{{ addMoney }}" bindinput="getAddMoney" />
    </view>

    <view class="tips">
        <text>内容过于复杂, 无人接单建议增加金额</text>
        <text>帮助费</text>
        <text>{{ 10 + addMoney }}元</text>
    </view>

    <button class="submitBtn" bindtap="submit">立即发布</button>
</view>

<view class="notice">用户条款&隐私策略</view>