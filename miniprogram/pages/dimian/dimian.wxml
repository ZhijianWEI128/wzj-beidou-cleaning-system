
<view class="body">
    <view class="item">
        <text>宿舍位置: </text>
        <input type="text" placeholder="如西8 121" value="{{ gameName }}" bindinput="getGameName" />
    </view>
    <view class="item">
        <text>清洁时间 </text>
        <input type="text" placeholder="如: 8:00-9:00或13:00-16:00" value="{{ gameTime }}" bindinput="getGameTime"  />
    </view>
    <view class="help_content">
        <text>备注信息: </text>
        <textarea placeholder="清洁要求如床铺 座椅等等" cols="30" rows="10" value="{{ remark }}" bindinput="getRemark"></textarea>
    </view>

    <view class="item">
        <text>金额: </text>
        <input type="text" placeholder="输入金额" value="{{ money }}" bindinput="getMoney" />
    </view>

    <view class="tips">
        <text>需支付</text>
        <text>{{ money }}元</text>
    </view>

    <button class="submitBtn" bindtap="submit">立即发布</button>
</view>

<view class="notice">用户条款&隐私策略</view>